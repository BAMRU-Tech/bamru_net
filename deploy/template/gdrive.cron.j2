#!/usr/bin/env bash
set -e

REMOTE_DIR={{ gdrive_remote_dir }}
RCLONE="/usr/local/bin/rclone --config /home/{{ app_user }}/.rclone.conf"

function rclone_copy {
    ${RCLONE} copy /home/{{ app_user }}/$1 gdrive:${REMOTE_DIR}/$1
}

{
    rclone_copy backup
    rclone_copy logs
    rclone_copy old_logs
    rclone_copy system
} 2>&1 >> /var/log/backup.log
