export GOOGLE_CREDENTIALS_FILE='/home/{{ app_user }}/google-credentials.json'
export GOOGLE_CALENDAR_ID='{{ google_calendar_id }}'

export CELERY_BROKER_URL='{{ celery_broker_url }}'

